#!/usr/bin/env -S octave -qf

pkg load geometry

addpath('..');

p1 = [2 -1];
v1 = normalizeVector([4 10]);
#r1 = .7;
r1 = 5;
p2 = [3 1];
v2 = normalizeVector([10 5]);
r2 = .7;

c1 = p1 + v1 * r1;
c2 = p2 + v2 * r2;

[cnt, note] = CirclesTest(c1, r1, c2, r2)
if (cnt==0)
  if (note==-2)
    e = AdjustCircles(p2, v2, r2, p1, v1, r1, note<0)
  else
    e = AdjustCircles(p1, v1, r1, p2, v2, r2, note<0)
  endif
endif

if (note==-1)
  c1e = p1 + v1 * (r1-e);
else
  c1e = p1 + v1 * (r1+e);
endif
if (note==-2)
  c2e = p2 + v2 * (r2-e);
else
  c2e = p2 + v2 * (r2+e);
endif

figure;
hold on;
axis equal;
drawPoint(p1);
plot([p1(1),  p1(1)+v1(1)], [p1(2), p1(2)+v1(2)])
drawPoint(p2);
plot([p2(1),  p2(1)+v2(1)], [p2(2), p2(2)+v2(2)])
drawCircle(c1, r1);
drawCircle(c2, r2);
if (cnt==0)
  if (note==-1)
    drawCircle(c1e, r1-e);
  else
    drawCircle(c1e, r1+e);
  endif
  if (note==-2)
    drawCircle(c2e, r2-e);
  else
    drawCircle(c2e, r2+e);
  endif
endif
waitforbuttonpress();
